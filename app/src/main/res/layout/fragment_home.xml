<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kpsoftwaresolutions.shafiqapplication.fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/shafiq1pp"/>
        <RelativeLayout
            android:id="@+id/layout1"
            android:background="#f0f7f7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image1"
            android:layout_marginTop="5dp"
            android:padding="10dp"

            >

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1b4f72"
                android:textSize="18sp"
                android:typeface="serif"
                android:textStyle="bold"
                android:text="MD. SHAFIQUZZAMAN SHAFIQ"
                />
            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1b4f72"
                android:textSize="18sp"
                android:typeface="serif"
                android:textStyle="bold"
                android:layout_below="@id/tv2"
                android:text="মোঃ শফিকুজ্জামান শফিক"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#f0f7f7"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/layout1">
            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#17202a"
                android:textSize="18sp"
                android:typeface="serif"
                android:textStyle="normal"

                android:layout_marginBottom="10dp"
                android:text="@string/about_me"
                />
        </LinearLayout>
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-5910423341335020/5841521955"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>

                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:typeface="serif"
                    android:textStyle="normal"
                    android:textSize="18sp"
                    android:textColor="#080113"
                    android:padding="5dp"

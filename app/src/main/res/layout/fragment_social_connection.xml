<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kpsoftwaresolutions.shafiqapplication.fragments.SocialConnectionFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="30dp"
            android:background="@color/background">

            <Button
                android:id="@+id/button1"
                android:typeface="serif"
                android:text="facebook"
                android:textColor="#fafcfa"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:background="#074dee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="78dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/button2"
                android:text="Skype"
                android:typeface="serif"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#fafcfa"
                android:background="#0ca6cc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:textAllCaps="false"
                android:layout_below="@+id/button1"
                android:layout_alignStart="@+id/button1" />

            <Button
                android:id="@+id/button3"
                android:text="youtube"
                android:typeface="serif"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#fafcfa"
                android:background="#cb0312"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button2"
                android:layout_alignStart="@+id/button2"
                android:layout_marginTop="40dp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/button4"
                android:text="twitter"
                android:typeface="serif"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#fafcfa"
                android:background="#308cf3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button3"
                android:layout_alignEnd="@+id/button3"
                android:layout_marginTop="40dp"
                android:textAllCaps="false"/>

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Find me in Social Networking Site"
                android:textSize="18sp"
                android:typeface="serif"
                android:textStyle="italic"
                android:padding="16dp"
                android:textColor="#31083b"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-5910423341335020/5841521955"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
